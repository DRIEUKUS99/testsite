    <script>
        // Form handling
        document.getElementById('blogForm').addEventListener('submit', function(e) {
            e.preventDefault();
            alert('Bedankt voor het delen van je verhaal! We zullen het bekijken en mogelijk plaatsen op onze website.');
            this.reset();
        });
        
        document.getElementById('reviewForm').addEventListener('submit', function(e) {
            e.preventDefault();
            alert('Bedankt voor je review! We waarderen je feedback enorm.');
            this.reset();
        });
        
        // Smooth scrolling for navigation
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                
                document.querySelector(this.getAttribute('href')).scrollIntoView({
                    behavior: 'smooth'
                });
            });
        });
        
        // Mobile menu toggle (would need implementation)
    </script>
